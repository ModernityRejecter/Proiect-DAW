@model Proiect.Models.Wishlist
@{
    ViewData["Title"] = "Produse Favorite";
}

<div class="container mt-4 mb-5">
    <h2 class="fw-bold text-brand mb-4">
        <i class="bi bi-heart me-2"></i>Produse Favorite
    </h2>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5 bg-white shadow-sm rounded">
            <div class="mb-3">
                <i class="bi bi-heart-break text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">Nu ai produse salvate</h4>
            <p class="text-muted mb-4">Salvează produsele favorite pentru a le găsi mai ușor.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary px-4">
                Vezi Produse
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var item in Model.Items)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm hover-effect product-card">

                        <div class="position-relative overflow-hidden bg-light rounded-top d-flex align-items-center justify-content-center" style="height: 200px;">
                            <a asp-controller="Products" asp-action="Show" asp-route-id="@item.ProductId" class="w-100 h-100 d-flex align-items-center justify-content-center">
                                @if (!string.IsNullOrEmpty(item.Product?.ImagePath))
                                {
                                    <img src="@item.Product.ImagePath" class="w-100 h-100 object-fit-cover" alt="@item.Product.Name">
                                }
                                else
                                {
                                    <div class="text-muted text-center">
                                        <i class="bi bi-image fs-1"></i>
                                        <p class="mb-0 small">Fără imagine</p>
                                    </div>
                                }
                            </a>

                            <div class="position-absolute top-0 start-0 m-2">
                                @if (item.Product.Stock > 0)
                                {
                                    <span class="badge bg-success text-white shadow-sm">În stoc</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger shadow-sm">Epuizat</span>
                                }
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column p-3">
                            <div class="mb-2">
                                <span class="badge bg-light text-secondary border">
                                    <i class="bi bi-tag me-1"></i> @(item.Product.Category?.Name ?? "General")
                                </span>
                            </div>

                            <h6 class="card-title fw-bold mb-1 text-truncate">
                                <a asp-controller="Products" asp-action="Show" asp-route-id="@item.ProductId" class="text-dark text-decoration-none">
                                    @item.Product.Name
                                </a>
                            </h6>

                            <div class="mb-3 text-warning small">
                                @if (item.Product.Rating.HasValue && item.Product.Rating > 0)
                                {
                                    <span><i class="bi bi-star-fill"></i> @item.Product.Rating</span>
                                }
                                else
                                {
                                    <span class="text-muted"><i class="bi bi-star"></i> -</span>
                                }
                            </div>

                            <div class="mt-auto border-top pt-3">
                                <div class="mb-3">
                                    <span class="fw-bold text-brand fs-5">@item.Product.Price RON</span>
                                </div>

                                <div class="d-flex gap-2">
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="flex-grow-1">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-primary w-100 shadow-sm fw-bold" title="Adaugă în coș" @(item.Product.Stock <= 0 ? "disabled" : "")>
                                            <i class="bi bi-cart-plus me-1"></i> Adaugă
                                        </button>
                                    </form>

                                    <form asp-action="Remove" method="post">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-outline-danger shadow-sm" title="Elimină din favorite">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Înapoi la Magazin
        </a>
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .object-fit-cover {
        object-fit: cover;
    }
</style>