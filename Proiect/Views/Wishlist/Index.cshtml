@model Proiect.Models.Wishlist
@{
    ViewData["Title"] = "Produse Favorite";
}

<div class="container mt-4 mb-5">
    <h2 class="fw-bold text-brand mb-4">
        <i class="bi bi-heart-fill me-2 text-danger"></i>Produse Favorite
    </h2>

    @if (TempData["message"] != null)
    {
        <div class="alert @(TempData["messageType"] ?? "alert-success") alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i> @TempData["message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5 bg-white shadow-sm rounded">
            <div class="mb-3">
                <i class="bi bi-heart-break text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">Nu ai produse salvate</h4>
            <p class="text-muted mb-4">Salvează produsele favorite pentru a le găsi mai ușor.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary px-4">
                Vezi Produse
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var item in Model.Items)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-effect">
                        <div class="position-absolute top-0 end-0 m-2 z-index-1">
                            <form asp-action="Remove" method="post">
                                <input type="hidden" name="itemId" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-light rounded-circle shadow-sm text-danger" title="Elimină">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>

                        <div class="bg-light rounded-top d-flex align-items-center justify-content-center overflow-hidden position-relative" style="height: 200px;">
                            <a asp-controller="Products" asp-action="Show" asp-route-id="@item.ProductId" class="w-100 h-100 d-flex align-items-center justify-content-center">
                                @if (!string.IsNullOrEmpty(item.Product?.ImagePath))
                                {
                                    <img src="@item.Product.ImagePath" class="w-100 h-100 object-fit-cover" alt="@item.Product.Name">
                                }
                                else
                                {
                                    <div class="text-muted text-center">
                                        <i class="bi bi-image fs-1"></i>
                                    </div>
                                }
                            </a>

                            <div class="position-absolute bottom-0 start-0 w-100 p-2 bg-gradient-dark text-white text-center small" style="background: rgba(0,0,0,0.5);">
                                @if (item.Product.Stock > 0)
                                {
                                    <span class="fw-bold text-white"><i class="bi bi-check-circle me-1"></i>În Stoc</span>
                                }
                                else
                                {
                                    <span class="fw-bold text-danger"><i class="bi bi-x-circle me-1"></i>Stoc Epuizat</span>
                                }
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-dark text-truncate mb-2">
                                <a asp-controller="Products" asp-action="Show" asp-route-id="@item.ProductId" class="text-decoration-none text-dark">
                                    @item.Product.Name
                                </a>
                            </h5>

                            <div class="mb-3">
                                <span class="fw-bold text-primary fs-5">@item.Product.Price RON</span>
                            </div>

                            <div class="mt-auto">
                                <form asp-action="MoveToCart" method="post" class="d-grid">
                                    <input type="hidden" name="itemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-primary" @(item.Product.Stock <= 0 ? "disabled" : "")>
                                        <i class="bi bi-cart-plus me-1"></i> Mută în Coș
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Înapoi la Magazin
        </a>
    </div>
</div>

<style>
    .object-fit-cover {
        object-fit: cover;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }
</style>