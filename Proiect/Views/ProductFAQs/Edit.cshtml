@model Proiect.Models.ProductFAQs
@{
    ViewData["Title"] = "Răspunde la întrebare";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-bold">Răspunde la întrebare</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="text-muted small fw-bold text-uppercase">Produs</label>
                        <p class="fs-5 fw-bold text-brand">@Model.Product.Name</p>
                    </div>

                    <div class="mb-4 bg-light p-3 rounded border">
                        <label class="text-muted small fw-bold text-uppercase"><i class="bi bi-person-fill me-1"></i> Întrebare Client</label>
                        <p class="mb-0 mt-1">@Model.Question</p>
                    </div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-4">
                            <textarea name="answer" class="form-control" style="height: 150px" required></textarea>
                            <label>Răspunsul tău</label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Înapoi
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-send me-2"></i> Trimite Răspuns
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>