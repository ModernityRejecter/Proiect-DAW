@model IEnumerable<Proiect.Models.ProductFAQs>
@{
    ViewData["Title"] = "Gestionare Întrebări";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-brand">
            <i class="bi bi-question-circle me-2"></i> Întrebări fără răspuns
        </h2>
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Dashboard Admin
            </a>
        }
        else
        {
            <a asp-controller="Collaborator" asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Dashboard Colaborator
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded">
            <i class="bi bi-check-circle text-success fs-1"></i>
            <h4 class="mt-3 text-muted">Toate întrebările au primit răspuns!</h4>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm border rounded">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Produs</th>
                        <th>Întrebare</th>
                        <th class="text-end pe-4">Acțiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-brand">
                                <a asp-controller="Products" asp-action="Show" asp-route-id="@item.ProductId" target="_blank" class="text-decoration-none">
                                    @item.Product.Name
                                </a>
                            </td>
                            <td>@item.Question</td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil-square"></i> Răspunde
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Ștergeți această întrebare?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>