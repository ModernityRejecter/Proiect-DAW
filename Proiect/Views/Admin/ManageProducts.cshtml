@model IEnumerable<Proiect.Models.Product>

@{
    ViewData["Title"] = "Gestionare Produse";
    var categories = ViewBag.Categories as IEnumerable<Proiect.Models.Category>;
    var currentSearch = ViewBag.CurrentSearch as string;
    var currentCategory = ViewBag.CurrentCategory as int?;
    var currentStatus = ViewBag.CurrentStatus as string;
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-brand mb-0">Gestionare Produse</h2>
        <span class="badge bg-light text-dark border px-3 py-2">Total: @ViewBag.lastPage pagini</span>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light rounded">
            <form method="get" action="@Url.Action("ManageProducts", "Admin")" class="row g-3 align-items-end">

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold text-uppercase">Caută Produs</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" class="form-control border-start-0"
                               placeholder="Nume produs..." value="@currentSearch">
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Categorie</label>
                    <select name="categoryId" class="form-select" onchange="this.form.submit()">
                        <option value="">Toate Categoriile</option>
                        @if (categories != null)
                        {
                            foreach (var cat in categories)
                            {
                                if (currentCategory == cat.Id)
                                {
                                    <option value="@cat.Id" selected>@cat.Name</option>
                                }
                                else
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            }
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Status</label>
                    <select name="statusFilter" class="form-select" onchange="this.form.submit()">
                        <option value="">Toate</option>
                        @if (currentStatus == "Active")
                        {
                            <option value="Active" selected>Active</option>
                        }
                        else
                        {
                            <option value="Active">Active</option>
                        }

                        @if (currentStatus == "Inactive")
                        {
                            <option value="Inactive" selected>Inactive</option>
                        }
                        else
                        {
                            <option value="Inactive">Inactive</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        Filtrează
                    </button>
                    <a asp-action="ManageProducts" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                <i class="bi bi-box-seam fs-1 text-muted"></i>
            </div>
            <h4 class="text-muted">Nu există produse în bază de date.</h4>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-effect position-relative">

                        <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success shadow-sm">Activ</span>
                            }
                            else
                            {
                                <span class="badge bg-danger shadow-sm">Inactiv</span>
                            }
                        </div>

                        <div class="bg-light rounded-top d-flex align-items-center justify-content-center overflow-hidden" style="height: 200px;">
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" class="w-100 h-100 object-fit-cover" alt="@item.Name"
                                     onerror="this.onerror=null;this.src='https://placehold.co/400x300?text=No+Image';">
                            }
                            else
                            {
                                <div class="text-muted text-center">
                                    <i class="bi bi-image fs-1"></i>
                                    <p class="mb-0 small">Fără imagine</p>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-light text-secondary border text-truncate" style="max-width: 150px;">
                                    <i class="bi bi-tag me-1"></i> @(item.Category?.Name ?? "Fără Categorie")
                                </span>
                                <small class="text-muted" title="Propus de">
                                    <i class="bi bi-person me-1"></i> @(item.Proposal?.User?.UserName ?? "Admin")
                                </small>
                            </div>

                            <h5 class="card-title fw-bold text-dark mb-2 text-truncate" title="@item.Name">
                                @item.Name
                            </h5>

                            <div class="row g-2 mt-auto pt-3 border-top">
                                <div class="col-6">
                                    <div class="p-2 bg-light rounded border text-center">
                                        <small class="text-muted d-block text-uppercase" style="font-size: 0.65rem;">Preț</small>
                                        <span class="fw-bold text-brand">@item.Price RON</span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-2 bg-light rounded border text-center">
                                        <small class="text-muted d-block text-uppercase" style="font-size: 0.65rem;">Stoc</small>
                                        <span class="fw-bold @(item.Stock > 0 ? "text-dark" : "text-danger")">@item.Stock</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 p-3 pt-0">
                            <div class="d-grid gap-2">
                                <div class="d-flex gap-2">
                                    <a asp-controller="Products" asp-action="Show" asp-route-id="@item.Id" class="btn btn-outline-primary w-50 btn-sm">
                                        <i class="bi bi-eye"></i> Vezi
                                    </a>
                                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary w-50 btn-sm">
                                        <i class="bi bi-pencil"></i> Editează
                                    </a>
                                </div>

                                <form asp-controller="Products" asp-action="ToggleStatus" asp-route-id="@item.Id" method="post">
                                    @if (item.IsActive)
                                    {
                                        <button type="submit" class="btn btn-danger w-100 btn-sm bg-opacity-10">
                                            <i class="bi bi-eye-slash me-1"></i> Dezactivează Produsul
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-success w-100 btn-sm bg-opacity-10">
                                            <i class="bi bi-eye me-1"></i> Activează Produsul
                                        </button>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <partial name="_Pagination" />
    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Înapoi
        </a>
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .object-fit-cover {
        object-fit: cover;
    }
</style>