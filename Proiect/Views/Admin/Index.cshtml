@model Proiect.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-brand mb-1">Admin Dashboard</h2>
            <p class="text-muted mb-0">Panou de administrare și statistici generale</p>
        </div>
        <div class="bg-white px-4 py-2 rounded-pill shadow-sm border">
            <i class="bi bi-calendar3 text-brand me-2"></i>
            <span class="fw-medium">@DateTime.Now.ToString("dd MMMM yyyy")</span>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 hover-effect">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle bg-brand-soft p-3 me-3 d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <i class="bi bi-people-fill fs-3 text-brand"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small fw-bold">Utilizatori</h6>
                        <h2 class="mb-0 fw-bold text-dark">@Model.TotalUsers</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 hover-effect">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle bg-brand-soft p-3 me-3 d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <i class="bi bi-box-seam fs-3 text-brand"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small fw-bold">Produse</h6>
                        <h2 class="mb-0 fw-bold text-dark">@Model.TotalProducts</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 hover-effect">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle bg-brand-soft p-3 me-3 d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <i class="bi bi-file-earmark-plus fs-3 text-brand"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small fw-bold">Propuneri</h6>
                        <h2 class="mb-0 fw-bold text-dark">@Model.PendingProposals</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 hover-effect">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle bg-brand-soft p-3 me-3 d-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <i class="bi bi-cart-check fs-3 text-brand"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small fw-bold">Comenzi</h6>
                        <h2 class="mb-0 fw-bold text-dark">@Model.TotalOrders</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="card-title mb-0 fw-bold text-dark">Meniu Rapid</h5>
                </div>
                <div class="list-group list-group-flush py-2">
                    <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center">
                        <i class="bi bi-tags text-brand me-3 fs-5"></i>
                        <span class="fw-medium">Gestionează Categorii</span>
                        <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                    </a>

                    <a asp-action="ManageUsers" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center">
                        <i class="bi bi-person-gear text-brand me-3 fs-5"></i>
                        <span class="fw-medium">Gestionează Utilizatori</span>
                        <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                    </a>

                    <a asp-action="ManageProposals" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center">
                        <i class="bi bi-check-circle text-brand me-3 fs-5"></i>
                        <span class="fw-medium">Aprobare Produse</span>
                        @if (Model.PendingProposals > 0)
                        {
                            <span class="badge bg-danger rounded-pill ms-auto">@Model.PendingProposals</span>
                        }
                        else
                        {
                            <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                        }
                    </a>

                    <a asp-action="AllProposals" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center">
                        <i class="bi bi-archive text-brand me-3 fs-5"></i>
                        <span class="fw-medium">Toate Propunerile</span>
                        <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                    </a>

                    <a asp-action="ManageReviews" class="list-group-item list-group-item-action border-0 py-3 px-4 d-flex align-items-center">
                        <i class="bi bi-chat-left-quote text-brand me-3 fs-5"></i>
                        <span class="fw-medium">Moderează Recenzii</span>
                        <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 fw-bold text-dark">Ultimele Comenzi</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 text-muted small text-uppercase py-3 ps-4">ID</th>
                                <th class="border-0 text-muted small text-uppercase py-3">Data</th>
                                <th class="border-0 text-muted small text-uppercase py-3">Client</th>
                                <th class="border-0 text-muted small text-uppercase py-3 pe-4 text-end">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td class="ps-4 fw-medium text-brand">#@order.Id</td>
                                    <td class="text-muted">@order.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-brand-soft text-brand d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                                <i class="bi bi-person-fill"></i>
                                            </div>
                                            <span>@order.User?.Email</span>
                                        </div>
                                    </td>
                                    <td class="pe-4 text-end">
                                        <span class="badge bg-light text-dark border">@order.Status</span>
                                    </td>
                                </tr>
                            }
                            @if (!Model.RecentOrders.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">Nu există comenzi recente.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>