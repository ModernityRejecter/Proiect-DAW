@model IEnumerable<Proiect.Models.ProductProposal>
@{
    ViewData["Title"] = "Istoric Propuneri";
    var currentSearch = ViewBag.CurrentSearch as string;
    var currentFilter = ViewBag.CurrentFilter as string;
    var currentSort = ViewBag.CurrentSort as string;
    var statuses = new[] { "Pending", "Approved", "Rejected" };
}

<div class="container mt-4 mb-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-brand mb-1">Toate Propunerile</h2>
        </div>
        <span class="badge bg-light text-dark border px-3 py-2">Total: @ViewBag.lastPage pagini</span>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light rounded">
            <form method="get" action="@Url.Action("AllProposals", "Admin")" class="row g-3 align-items-end justify-content-end">

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold text-uppercase">Caută</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" class="form-control border-start-0"
                               placeholder="Nume, Descriere sau Email..." value="@currentSearch">
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Status</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="All">Toate</option>
                        @foreach (var status in statuses)
                        {
                            if (currentFilter == status)
                            {
                                <option value="@status" selected>
                                    @(status == "Pending" ? "În așteptare" : status == "Approved" ? "Aprobat" : "Respins")
                                </option>
                            }
                            else
                            {
                                <option value="@status">
                                    @(status == "Pending" ? "În așteptare" : status == "Approved" ? "Aprobat" : "Respins")
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Sortare</label>
                    <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                        @if (string.IsNullOrEmpty(currentSort) || currentSort == "Newest")
                        {
                            <option value="Newest" selected>Cele mai noi</option>
                            <option value="Oldest">Cele mai vechi</option>
                        }
                        else
                        {
                            <option value="Newest">Cele mai noi</option>
                            <option value="Oldest" selected>Cele mai vechi</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        Filtrează
                    </button>
                    <a asp-action="AllProposals" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                <i class="bi bi-search fs-1 text-muted"></i>
            </div>
            <h4 class="text-muted">Niciun rezultat găsit</h4>
            <p class="text-muted mb-0">Încearcă să schimbi filtrele selectate.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0 hover-effect position-relative">

                        <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                            @if (item.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark shadow-sm">
                                    <i class="bi bi-hourglass-split me-1"></i> În așteptare
                                </span>
                            }
                            else if (item.Status == "Approved")
                            {
                                <span class="badge bg-success shadow-sm">
                                    <i class="bi bi-check-circle me-1"></i> Aprobat
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger shadow-sm">
                                    <i class="bi bi-x-circle me-1"></i> Respins
                                </span>
                            }
                        </div>

                        <div class="bg-light rounded-top d-flex align-items-center justify-content-center overflow-hidden" style="height: 200px;">
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" class="w-100 h-100 object-fit-cover" alt="@item.Name"
                                     onerror="this.onerror=null;this.src='https://placehold.co/400x300?text=No+Image';">
                            }
                            else
                            {
                                <div class="text-muted text-center">
                                    <i class="bi bi-image fs-1"></i>
                                    <p class="mb-0 small">Fără imagine</p>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <span class="badge bg-light text-secondary border">
                                    <i class="bi bi-tag me-1"></i> @(item.Category?.Name ?? "Fără Categorie")
                                </span>
                            </div>

                            <h5 class="card-title fw-bold text-dark mb-2 text-truncate" title="@item.Name">
                                @item.Name
                            </h5>

                            <div class="mt-2 mb-3">
                                <small class="text-muted d-block">Propus de:</small>
                                <small class="fw-bold text-dark text-truncate d-block">
                                    @(item.User?.UserName ?? "Utilizator necunoscut")
                                </small>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                <span class="fw-bold text-brand">@item.Price RON</span>
                                <span class="text-muted small">Stoc: @item.Stock</span>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 p-3">
                            <div class="d-flex gap-2 w-100">
                                <a asp-controller="ProductProposals" asp-action="Show" asp-route-id="@item.Id"
                                   class="btn btn-outline-primary btn-sm flex-grow-1">
                                    <i class="bi bi-eye"></i> Detalii
                                </a>

                                @if (item.Status == "Pending")
                                {
                                    <form asp-action="ApproveProposal" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-success btn-sm" title="Aprobă">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                    </form>
                                    <form asp-action="RejectProposal" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Respinge">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <partial name="_Pagination" />
    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Înapoi
        </a>
    </div>
</div>

<style>
    .object-fit-cover {
        object-fit: cover;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }

    .nav-pills .nav-link {
        transition: all 0.2s;
    }
</style>