@model IEnumerable<Proiect.Models.ApplicationUser>
@{
    ViewData["Title"] = "Administrare Useri";
    var userRoles = ViewBag.UserRoles as Dictionary<string, string>;
    var allRoles = ViewBag.AllRoles as List<string>;

    var searchString = ViewBag.CurrentSearch as string;
    var activeRoleFilter = ViewBag.CurrentRole as string;
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-brand mb-0">Gestionare Utilizatori</h2>
        <span class="badge bg-light text-dark border px-3 py-2">Total: @ViewBag.lastPage pagini</span>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light rounded">
            <form method="get" action="@Url.Action("ManageUsers", "Admin")" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label small text-muted fw-bold text-uppercase">Caută Utilizator</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" class="form-control border-start-0"
                               placeholder="Email, Nume sau Prenume..." value="@searchString">
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Filtrează după Rol</label>
                    <select name="roleFilter" class="form-select" onchange="this.form.submit()">
                        <option value="All">Toate Rolurile</option>
                        @foreach (var role in allRoles)
                        {
                            if (activeRoleFilter == role)
                            {
                                <option value="@role" selected>@role</option>
                            }
                            else
                            {
                                <option value="@role">@role</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        Filtrează
                    </button>
                    <a asp-action="ManageUsers" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                <i class="bi bi-person-x fs-1 text-muted"></i>
            </div>
            <h4 class="text-muted">Nu am găsit utilizatori conform criteriilor.</h4>
            <a asp-action="ManageUsers" class="btn btn-outline-primary mt-3">Vezi toți utilizatorii</a>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var user in Model)
        {
            var currentRole = userRoles != null && userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : "User";

            <div class="col">
                <div class="card h-100 shadow-sm border-0 hover-effect">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-brand-soft rounded-circle d-flex align-items-center justify-content-center me-3 text-brand fw-bold flex-shrink-0" style="width: 45px; height: 45px;">
                                <i class="bi bi-person-fill fs-5"></i>
                            </div>
                            <div class="overflow-hidden">
                                <h6 class="fw-bold mb-0 text-dark text-truncate" title="@user.Email">@user.Email</h6>
                                <small class="text-muted">Utilizator</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                                <span class="text-muted small">Nume:</span>
                                <span class="fw-medium text-dark">@user.LastName</span>
                            </div>
                            <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                                <span class="text-muted small">Prenume:</span>
                                <span class="fw-medium text-dark">@user.FirstName</span>
                            </div>
                        </div>

                        <form asp-action="UpdateUserRole" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <label class="small text-muted fw-bold mb-1">Rol curent:</label>
                            <select name="newRole" class="form-select form-select-sm bg-light border-0 fw-bold text-dark cursor-pointer" onchange="this.form.submit()">
                                @foreach (var role in allRoles)
                                {
                                    if (role == currentRole)
                                    {
                                        <option value="@role" selected>@role</option>
                                    }
                                    else
                                    {
                                        <option value="@role">@role</option>
                                    }
                                }
                            </select>
                        </form>
                    </div>

                    <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Sigur ștergi acest user?');">
                            <button type="submit" class="btn btn-outline-danger w-100 btn-sm">
                                <i class="bi bi-trash3-fill me-1"></i> Șterge Contul
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <partial name="_Pagination" />

    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Înapoi
        </a>
    </div>
</div>

<style>
    .cursor-pointer {
        cursor: pointer;
    }

    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .bg-brand-soft {
        background-color: rgba(79, 70, 229, 0.12);
    }

    .text-brand {
        color: #4f46e5;
    }
</style>