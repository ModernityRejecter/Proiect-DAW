@model IEnumerable<Proiect.Models.ApplicationUser>
@{
    ViewData["Title"] = "Administrare Useri";
    var userRoles = ViewBag.UserRoles as Dictionary<string, string>;
    var allRoles = ViewBag.AllRoles as List<string>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-brand mb-0">Administrare Utilizatori</h2>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Înapoi la Dashboard
        </a>
    </div>


    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 border-0">Email</th>
                            <th class="py-3 border-0">Nume</th>
                            <th class="py-3 border-0">Prenume</th>
                            <th class="py-3 border-0" style="min-width: 200px;">Rol</th>
                            <th class="pe-4 py-3 border-0 text-end">Acțiuni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var currentRole = userRoles != null && userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : "User";

                            <tr>
                                <td class="ps-4 fw-medium text-brand">@user.Email</td>
                                <td>@user.LastName</td>
                                <td>@user.FirstName</td>
                                <td>
                                    <form asp-action="UpdateUserRole" method="post" class="d-flex gap-2 align-items-center">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <select name="newRole" class="form-select form-select-sm border-0 bg-light fw-bold text-dark" style="cursor: pointer;" onchange="this.form.submit()">
                                            @foreach (var role in allRoles)
                                            {
                                                if (role == currentRole)
                                                {
                                                    <option value="@role" selected>@role</option>
                                                }
                                                else
                                                {
                                                    <option value="@role">@role</option>
                                                }
                                            }
                                        </select>
                                    </form>
                                </td>
                                <td class="pe-4 text-end">
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Sigur ștergi acest user?');" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Șterge utilizator">
                                            <i class="bi bi-trash3-fill"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>