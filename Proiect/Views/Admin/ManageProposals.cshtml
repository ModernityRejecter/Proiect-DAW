@model IEnumerable<Proiect.Models.ProductProposal>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Gestionare Propuneri";

    var currentUserId = UserManager.GetUserId(User);

    var currentSearch = ViewBag.CurrentSearch as string;
    var currentStatus = ViewBag.CurrentStatus as string;
    var currentSort = ViewBag.CurrentSort as string;
    var statuses = new[] { "Pending", "Approved", "Rejected" };
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-brand mb-0">Gestionare Propuneri</h2>
        <span class="badge bg-light text-dark border px-3 py-2">Total: @ViewBag.lastPage pagini</span>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light rounded">
            <form method="get" action="@Url.Action("ManageProposals", "Admin")" class="row g-3 align-items-end justify-content-end">

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold text-uppercase">Caută</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" class="form-control border-start-0"
                               placeholder="Nume, Descriere sau Email..." value="@currentSearch">
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Status</label>
                    <select name="statusFilter" class="form-select" onchange="this.form.submit()">
                        <option value="All">Toate</option>

                        @if (currentStatus == "Pending")
                        {
                            <option value="Pending" selected>În așteptare</option>
                        }
                        else
                        {
                            <option value="Pending">În așteptare</option>
                        }

                        @if (currentStatus == "Approved")
                        {
                            <option value="Approved" selected>Aprobat</option>
                        }
                        else
                        {
                            <option value="Approved">Aprobat</option>
                        }

                        @if (currentStatus == "Rejected")
                        {
                            <option value="Rejected" selected>Respins</option>
                        }
                        else
                        {
                            <option value="Rejected">Respins</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Sortare</label>
                    <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                        @if (string.IsNullOrEmpty(currentSort) || currentSort == "Newest")
                        {
                            <option value="Newest" selected>Cele mai noi</option>
                            <option value="Oldest">Cele mai vechi</option>
                        }
                        else
                        {
                            <option value="Newest">Cele mai noi</option>
                            <option value="Oldest" selected>Cele mai vechi</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        Filtrează
                    </button>
                    <a asp-action="ManageProposals" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                <i class="bi bi-check-all fs-1 text-success"></i>
            </div>
            <h4 class="text-muted">Niciun rezultat găsit</h4>
            <p class="text-muted mb-0">Nu există propuneri care să corespundă criteriilor selectate.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0 hover-effect position-relative">

                        <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                            @if (item.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark shadow-sm">
                                    <i class="bi bi-hourglass-split me-1"></i> În așteptare
                                </span>
                            }
                            else if (item.Status == "Approved")
                            {
                                <span class="badge bg-success shadow-sm">
                                    <i class="bi bi-check-circle me-1"></i> Aprobat
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger shadow-sm">
                                    <i class="bi bi-x-circle me-1"></i> Respins
                                </span>
                            }
                        </div>

                        <div class="bg-light rounded-top d-flex align-items-center justify-content-center overflow-hidden" style="height: 200px;">
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" class="w-100 h-100 object-fit-cover" alt="@item.Name"
                                     onerror="this.onerror=null;this.src='https://placehold.co/400x300?text=No+Image';">
                            }
                            else
                            {
                                <div class="text-muted text-center">
                                    <i class="bi bi-image fs-1"></i>
                                    <p class="mb-0 small">Fără imagine</p>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <span class="badge bg-light text-secondary border">
                                    <i class="bi bi-tag me-1"></i> @(item.Category?.Name ?? "General")
                                </span>
                            </div>

                            <h5 class="card-title fw-bold text-dark mb-2 text-truncate" title="@item.Name">
                                @item.Name
                            </h5>

                            <p class="card-text text-muted small flex-grow-1 text-truncate-3">
                                @item.Description
                            </p>

                            <div class="mt-2 mb-3">
                                <small class="text-muted fst-italic">
                                    <i class="bi bi-person me-1"></i> @(item.User?.UserName ?? "Necunoscut")
                                </small>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top">
                                <div class="d-flex flex-column">
                                    <span class="text-muted small">Preț</span>
                                    <span class="fw-bold text-brand">@item.Price RON</span>
                                </div>
                                <div class="d-flex flex-column text-end">
                                    <span class="text-muted small">Stoc</span>
                                    <span class="fw-bold text-dark">@item.Stock buc.</span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 p-3">
                            <div class="d-flex flex-column gap-2 w-100">

                                @{
                                    int unreadCount = 0;
                                    if (item.Feedbacks != null)
                                    {
                                        unreadCount = item.Feedbacks.Count(f => f.UserId != currentUserId && !f.IsRead);
                                    }
                                }

                                <a asp-controller="ProposalFeedbacks" asp-action="Chat" asp-route-id="@item.Id"
                                   class="btn btn-primary btn-sm position-relative">
                                    <i class="bi bi-chat-left-text me-2"></i> Chat cu Colaboratorul

                                    @if (unreadCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @unreadCount
                                        </span>
                                    }
                                </a>
                                <a asp-controller="ProductProposals" asp-action="Show" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Detalii
                                </a>

                                @if (item.Status == "Pending")
                                {
                                    <div class="d-flex gap-2">
                                        <form asp-action="ApproveProposal" asp-route-id="@item.Id" method="post" class="flex-grow-1">
                                            <button type="submit" class="btn btn-outline-success btn-sm w-100" title="Aprobă și Publică">
                                                <i class="bi bi-check-lg"></i> Aprobă
                                            </button>
                                        </form>
                                        <form asp-action="RejectProposal" asp-route-id="@item.Id" method="post" class="flex-grow-1">
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100" title="Respinge Propunerea">
                                                <i class="bi bi-x-lg"></i> Respinge
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <partial name="_Pagination" />

    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Înapoi
        </a>
    </div>
</div>

<style>
    .text-truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }
</style>