@model IEnumerable<Proiect.Models.Order>

@{
    ViewData["Title"] = "Gestionare Comenzi";

    var currentSearch = ViewBag.CurrentSearch as string;
    var currentStatus = ViewBag.CurrentStatus as string;
    var currentTime = ViewBag.CurrentTime as string;
    var currentSort = ViewBag.CurrentSort as string;

    var statuses = new[] { "Inregistrata", "În curs de livrare", "Livrat", "Anulat" };
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-brand mb-0">Gestionare Comenzi</h2>
        <span class="badge bg-light text-dark border px-3 py-2">Total: @ViewBag.LastPage pagini</span>
    </div>

    @if (TempData["message"] != null)
    {
        <div class="alert @(TempData["messageType"] ?? "alert-success") alert-dismissible fade show shadow-sm mb-4" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            @TempData["message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light rounded">
            <form method="get" action="@Url.Action("ManageOrders", "Admin")" class="row g-3 align-items-end justify-content-end">

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Caută</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" class="form-control border-start-0"
                               placeholder="ID (#10) sau Email..." value="@currentSearch">
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold text-uppercase">Status</label>
                    <select name="statusFilter" class="form-select" onchange="this.form.submit()">
                        <option value="All">Toate statusurile</option>
                        @foreach (var status in statuses)
                        {
                            if (currentStatus == status)
                            {
                                <option value="@status" selected>@status</option>
                            }
                            else
                            {
                                <option value="@status">@status</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label small text-muted fw-bold text-uppercase">Perioadă</label>
                    <select name="timeFilter" class="form-select" onchange="this.form.submit()">
                        <option value="">Oricând</option>
                        @if (currentTime == "Today")
                        {
                            <option value="Today" selected>Azi</option>
                        }
                        else
                        {
                            <option value="Today">Azi</option>
                        }
                        @if (currentTime == "Last7Days")
                        {
                            <option value="Last7Days" selected>Ultim. 7 zile</option>
                        }
                        else
                        {
                            <option value="Last7Days">Ultim. 7 zile</option>
                        }
                        @if (currentTime == "Last30Days")
                        {
                            <option value="Last30Days" selected>Ultim. 30 zile</option>
                        }
                        else
                        {
                            <option value="Last30Days">Ultim. 30 zile</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label small text-muted fw-bold text-uppercase">Sortare</label>
                    <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                        @if (string.IsNullOrEmpty(currentSort) || currentSort == "Newest")
                        {
                            <option value="Newest" selected>Cele mai noi</option>
                            <option value="Oldest">Cele mai vechi</option>
                        }
                        else
                        {
                            <option value="Newest">Cele mai noi</option>
                            <option value="Oldest" selected>Cele mai vechi</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">
                        Filtrează
                    </button>
                    <a asp-action="ManageOrders" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                <i class="bi bi-clipboard-x fs-1 text-muted"></i>
            </div>
            <h4 class="text-muted">Nu există comenzi înregistrate.</h4>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @foreach (var order in Model)
            {
                decimal total = order.Items.Sum(i => i.Quantity * i.Price);
                int itemCount = order.Items.Sum(i => i.Quantity);

                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-effect">
                        <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-dark">#@order.Id</span>
                            <span class="text-muted small">@order.Date.ToString("dd.MM.yyyy HH:mm")</span>
                        </div>

                        <div class="card-body">
                            <div class="mb-3 d-flex align-items-center">
                                <div class="bg-brand-soft rounded-circle d-flex align-items-center justify-content-center me-3 text-brand" style="width: 40px; height: 40px;">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark small">@(order.User?.Email ?? "Utilizator șters")</div>
                                    <div class="text-muted" style="font-size: 0.75rem;">Client</div>
                                </div>
                            </div>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <div class="p-2 bg-light rounded border text-center">
                                        <small class="text-muted d-block text-uppercase" style="font-size: 0.65rem;">Produse</small>
                                        <span class="fw-bold">@itemCount</span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-2 bg-light rounded border text-center">
                                        <small class="text-muted d-block text-uppercase" style="font-size: 0.65rem;">Total</small>
                                        <span class="fw-bold text-brand">@total.ToString("0.00") RON</span>
                                    </div>
                                </div>
                            </div>

                            <form asp-action="UpdateOrderStatus" method="post" class="mt-3">
                                <input type="hidden" name="id" value="@order.Id" />
                                <label class="small text-muted fw-bold mb-1">Modifică Status:</label>
                                <div class="input-group">
                                    <select name="newStatus" class="form-select form-select-sm bg-light border-end-0 fw-medium" onchange="this.form.submit()">
                                        @{
                                            var statuses = new[] { "Inregistrata", "În curs de livrare", "Livrat", "Anulat" };
                                        }
                                        @foreach (var status in statuses)
                                        {
                                            if (order.Status == status)
                                            {
                                                <option value="@status" selected>@status</option>
                                            }
                                            else
                                            {
                                                <option value="@status">@status</option>
                                            }
                                        }
                                    </select>
                                    <span class="input-group-text bg-white border-start-0">
                                        @if (order.Status == "Livrat")
                                        {
                                            <i class="bi bi-check-circle-fill text-success"></i>
                                        }
                                        else if (order.Status == "Anulat")
                                        {
                                            <i class="bi bi-x-circle-fill text-danger"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-hourglass-split text-warning"></i>
                                        }
                                    </span>
                                </div>
                            </form>
                        </div>

                        <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary w-100 btn-sm">
                                <i class="bi bi-eye me-1"></i> Vezi Detalii Complete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <partial name="_Pagination" />
    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Înapoi
        </a>
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .bg-brand-soft {
        background-color: rgba(79, 70, 229, 0.12);
    }

    .text-brand {
        color: #4f46e5;
    }
</style>