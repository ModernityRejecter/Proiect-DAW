@model Proiect.Models.Product

@{
    ViewData["Title"] = Model.Name;
    // Verificăm sigur dacă ViewBag.IsInWishlist este setat, altfel e false
    bool isInWishlist = ViewBag.IsInWishlist == true;
}

<div class="container mt-5 mb-5">

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Acasă</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index" class="text-decoration-none">Produse</a></li>
            @if (Model.Category != null)
            {
                <li class="breadcrumb-item"><a asp-action="Index" asp-route-categoryId="@Model.CategoryId" class="text-decoration-none">@Model.Category.Name</a></li>
            }
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="card shadow border-0">
        <div class="card-body p-4">
            <div class="row">

                <div class="col-md-6 mb-4 mb-md-0">
                    <div class="bg-light rounded d-flex align-items-center justify-content-center overflow-hidden border position-relative" style="height: 450px;">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" class="img-fluid p-3" style="max-height: 100%; max-width: 100%; object-fit: contain;" alt="@Model.Name">
                        }
                        else
                        {
                            <div class="text-muted text-center">
                                <i class="bi bi-card-image display-1"></i>
                                <p class="mt-2">Fără imagine disponibilă</p>
                            </div>
                        }

                        <div class="position-absolute top-0 start-0 m-3">
                            @if (Model.Stock > 0)
                            {
                                <span class="badge bg-success shadow-sm px-3 py-2">În Stoc</span>
                            }
                            else
                            {
                                <span class="badge bg-danger shadow-sm px-3 py-2">Stoc Epuizat</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="ps-lg-4">
                        <div class="mb-2">
                            <span class="text-muted text-uppercase small fw-bold tracking-wide">
                                @(Model.Category?.Name ?? "General")
                            </span>
                        </div>

                        <h1 class="fw-bold text-dark mb-2">@Model.Name</h1>

                        <div class="mb-3 d-flex align-items-center">
                            <div class="text-warning me-2">
                                @{
                                    double ratingVal = Model.Rating ?? 0;
                                    int fullStars = (int)ratingVal;
                                    bool hasHalf = (ratingVal - fullStars) >= 0.5;
                                }
                                @for (int i = 0; i < fullStars; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                @if (hasHalf)
                                {
                                    <i class="bi bi-star-half"></i>
                                }
                                @for (int i = (hasHalf ? fullStars + 1 : fullStars); i < 5; i++)
                                {
                                    <i class="bi bi-star"></i>
                                }
                            </div>
                            <span class="text-muted small">(@(Model.Rating?.ToString("0.0") ?? "0.0"))</span>
                        </div>

                        <h2 class="text-primary fw-bold mb-4">@Model.Price RON</h2>

                        <div class="mb-4">
                            <h5 class="h6 text-dark fw-bold">Descriere produs</h5>
                            <p class="text-secondary" style="line-height: 1.6;">
                                @Model.Description
                            </p>
                        </div>

                        <hr class="my-4">

                        <div class="bg-light p-4 rounded border">
                            @if (Model.Stock > 0)
                            {
                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@Model.Id" />

                                    <div class="row g-3 align-items-end">
                                        <div class="col-sm-4">
                                            <label for="quantity" class="form-label fw-bold small">Cantitate</label>
                                            <div class="input-group">
                                                <button class="btn btn-outline-secondary" type="button" onclick="decrementValue()">-</button>
                                                <input type="number" id="quantity" name="quantity" class="form-control text-center border-secondary" value="1" min="1" max="@Model.Stock">
                                                <button class="btn btn-outline-secondary" type="button" onclick="incrementValue()">+</button>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">
                                                <i class="bi bi-cart-plus me-2"></i> Adaugă în Coș
                                            </button>
                                        </div>
                                    </div>
                                    <div class="mt-2 text-muted small">
                                        <i class="bi bi-box-seam me-1"></i> Disponibile: @Model.Stock bucăți
                                    </div>
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-danger mb-0 d-flex align-items-center">
                                    <i class="bi bi-exclamation-circle-fill me-2 fs-4"></i>
                                    <div>
                                        <strong>Indisponibil momentan.</strong><br>Acest produs nu mai este pe stoc.
                                    </div>
                                </div>
                            }
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="mt-3 text-center text-sm-start">
                                <form asp-controller="Wishlist" asp-action="Toggle" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@Model.Id" />

                                    @if (isInWishlist)
                                    {
                                        <button type="submit" class="btn btn-link text-decoration-none text-danger p-0 fw-bold">
                                            <i class="bi bi-heart-fill me-1"></i> Scoate de la Favorite
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-link text-decoration-none text-danger p-0">
                                            <i class="bi bi-heart me-1"></i> Adaugă la Favorite
                                        </button>
                                    }
                                </form>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function incrementValue() {
        var value = parseInt(document.getElementById('quantity').value, 10);
        value = isNaN(value) ? 1 : value;
        var max = parseInt(document.getElementById('quantity').getAttribute('max'), 10);
        if(value < max){
            document.getElementById('quantity').value = value + 1;
        }
    }

    function decrementValue() {
        var value = parseInt(document.getElementById('quantity').value, 10);
        value = isNaN(value) ? 1 : value;
        if(value > 1){
            document.getElementById('quantity').value = value - 1;
        }
    }
</script>

<button class="btn btn-primary rounded-circle shadow-lg d-flex align-items-center justify-content-center"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#aiChatOffcanvas"
        style="position: fixed; bottom: 30px; right: 30px; width: 60px; height: 60px; z-index: 1000;"
        title="Întreabă Asistentul AI">
    <i class="bi bi-robot fs-3"></i>
</button>

<div class="offcanvas offcanvas-end border-0 shadow-lg" tabindex="-1" id="aiChatOffcanvas" aria-labelledby="aiChatLabel">
    <div class="offcanvas-header bg-brand-soft text-brand border-bottom">
        <h5 class="offcanvas-title fw-bold d-flex align-items-center" id="aiChatLabel">
            <i class="bi bi-stars me-2"></i> Asistent Produs
        </h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body d-flex flex-column bg-light" id="chatContainer" style="height: 100%; overflow-y: auto;">
        <div class="align-self-start bg-white border p-3 rounded-3 shadow-sm mb-3 msg-ai">
            <small class="text-muted d-block mb-1 fw-bold">Asistent AI</small>
            <p class="mb-0 text-dark">Salut! Sunt asistentul tău virtual. Ai întrebări despre <strong>@Model.Name</strong>?</p>
        </div>
    </div>

    <div class="offcanvas-footer p-3 bg-white border-top">
        <form asp-controller="Products" asp-action="AskProductAssistant" method="post" id="chatForm">
            <input type="hidden" name="productId" value="@Model.Id" />

            <div class="input-group">
                <input type="text" name="question" id="userQuestionInput" class="form-control border-end-0" placeholder="Întreabă ceva..." required autocomplete="off">
                <button class="btn btn-primary" type="submit" id="sendQuestionBtn">
                    <i class="bi bi-send-fill"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .msg-user {
        align-self: flex-end;
        background-color: #4f46e5;
        color: white;
        border-radius: 15px 15px 0 15px;
        max-width: 85%;
        padding: 10px 15px;
        margin-bottom: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        overflow-wrap: break-word;
        word-wrap: break-word;
        word-break: break-word;
        white-space: pre-wrap;
    }

    .msg-ai {
        align-self: flex-start;
        background-color: white;
        color: #212529;
        border: 1px solid #e9ecef;
        border-radius: 15px 15px 15px 0;
        max-width: 85%;
        padding: 10px 15px;
        margin-bottom: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .typing-dots span {
        display: inline-block;
        width: 6px;
        height: 6px;
        background-color: #adb5bd;
        border-radius: 50%;
        animation: typing 1.4s infinite ease-in-out both;
        margin-right: 3px;
    }

        .typing-dots span:nth-child(1) {
            animation-delay: -0.32s;
        }

        .typing-dots span:nth-child(2) {
            animation-delay: -0.16s;
        }

    @@keyframes typing {
        0%, 80%, 100% {
            transform: scale(0);
        }

        40% {
            transform: scale(1);
        }
    }
</style>

<script>
        document.addEventListener("DOMContentLoaded", function() {
        var chatForm = document.getElementById("chatForm");
        var chatContainer = document.getElementById("chatContainer");
        var inputField = document.getElementById("userQuestionInput");
        var sendBtn = document.getElementById("sendQuestionBtn");

        if (!chatForm) return;

        function scrollToBottom() {
            requestAnimationFrame(() => {
                chatContainer.scrollTop = chatContainer.scrollHeight;
            });
        }

        function appendMessage(text, isUser) {
            var msgDiv = document.createElement("div");
            msgDiv.className = isUser ? "msg-user" : "msg-ai";

            if(!isUser) {
                 msgDiv.innerHTML = `<small class="text-muted d-block mb-1 fw-bold" style="font-size:0.7rem">Asistent AI</small>${text}`;
            } else {
                 msgDiv.textContent = text;
            }

            chatContainer.appendChild(msgDiv);
            scrollToBottom();
        }

        function showLoader() {
            var loader = document.createElement("div");
            loader.id = "chatLoader";
            loader.className = "msg-ai typing-dots";
            loader.innerHTML = '<span></span><span></span><span></span>';
            chatContainer.appendChild(loader);
            scrollToBottom();
        }

        function removeLoader() {
            var loader = document.getElementById("chatLoader");
            if(loader) loader.remove();
        }

        chatForm.addEventListener("submit", function(e) {
            e.preventDefault();

            var questionText = inputField.value.trim();
            if (!questionText) return;

            var formData = new FormData(chatForm);

            appendMessage(questionText, true);
            inputField.value = "";

            showLoader();
            sendBtn.disabled = true;
            inputField.disabled = true;

            fetch(chatForm.action, {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                removeLoader();
                sendBtn.disabled = false;
                inputField.disabled = false;
                inputField.focus();

                if (data.success) {
                    appendMessage(data.answer, false);
                }
                else {
                    appendMessage(data.answer, false);
                }
            })
            .catch(error => {
                removeLoader();
                sendBtn.disabled = false;
                inputField.disabled = false;
                appendMessage("A apărut o eroare de conexiune.", false);
            });
        });
    });
</script>