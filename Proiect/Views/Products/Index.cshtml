@model IEnumerable<Proiect.Models.Product>

@{
    ViewData["Title"] = "Magazin Online";
    var categories = ViewBag.Categories as IEnumerable<Proiect.Models.Category>;
    // Preluăm lista de ID-uri favorite
    var wishlistIds = ViewBag.WishlistProductIds as List<int> ?? new List<int>();
}

<div class="container mt-4 mb-5">

    <div class="card shadow-sm border-0 mb-5 bg-white">
        <div class="card-body p-4">
            <form method="get" action="@Url.Action("Index", "Products")">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label text-muted small fw-bold text-uppercase">Caută Produs</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                            <input type="text" name="searchString" class="form-control border-start-0 bg-light" placeholder="Ex: Laptop, Telefon..." value="@ViewBag.CurrentSearch">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-muted small fw-bold text-uppercase">Categorie</label>
                        <select name="categoryId" class="form-select bg-light" onchange="this.form.submit()">
                            <option value="">Toate Categoriile</option>
                            @if (categories != null)
                            {
                                foreach (var cat in categories)
                                {
                                    <option value="@cat.Id" selected="@(ViewBag.CurrentCategory != null && (int)ViewBag.CurrentCategory == cat.Id)">@cat.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-muted small fw-bold text-uppercase">Sortează După</label>
                        <select name="sortOrder" class="form-select bg-light" onchange="this.form.submit()">
                            <option value="" selected="@(ViewBag.CurrentSort == null)">Cele mai noi</option>
                            <option value="price_asc" selected="@(ViewBag.CurrentSort == "price_asc")">Preț crescător</option>
                            <option value="price_desc" selected="@(ViewBag.CurrentSort == "price_desc")">Preț descrescător</option>
                            <option value="rating_desc" selected="@(ViewBag.CurrentSort == "rating_desc")">Rating</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Filtrează</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Resetează</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @*<div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="text-muted">Rezultate găsite: <span class="text-dark fw-bold">@Model.Count()</span></h5>
    </div>*@

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3"><i class="bi bi-box2 text-muted" style="font-size: 4rem;"></i></div>
            <h3 class="text-muted">Nu am găsit produse conform filtrelor tale.</h3>
            <a asp-action="Index" class="btn btn-outline-primary mt-3">Vezi toate produsele</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var product in Model)
            {
                bool isInWishlist = wishlistIds.Contains(product.Id);

                <div class="col">
                    <div class="card h-100 border-0 shadow-sm hover-effect product-card">

                        <div class="position-relative overflow-hidden bg-light rounded-top d-flex align-items-center justify-content-center" style="height: 200px;">
                            <a asp-action="Show" asp-route-id="@product.Id" class="w-100 h-100 d-flex align-items-center justify-content-center">
                                @if (!string.IsNullOrEmpty(product.ImagePath))
                                {
                                    <img src="@product.ImagePath" class="w-100 h-100 object-fit-cover" alt="@product.Name">
                                }
                                else
                                {
                                    <i class="bi bi-image text-muted fs-1"></i>
                                }
                            </a>

                            <div class="position-absolute top-0 start-0 m-2">
                                @if (product.Stock > 0)
                                {
                                    <span class="badge bg-success text-white shadow-sm">În stoc</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger shadow-sm">Epuizat</span>
                                }
                            </div>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="position-absolute top-0 end-0 m-2">
                                    <form asp-controller="Wishlist" asp-action="Toggle" method="post">
                                        <input type="hidden" name="productId" value="@product.Id" />

                                        <button type="submit" class="btn btn-light rounded-circle shadow-sm p-0 d-flex align-items-center justify-content-center wishlist-btn"
                                                title="@(isInWishlist ? "Scoate de la favorite" : "Adaugă la favorite")">
                                            <i class="bi @(isInWishlist ? "bi-heart-fill text-danger" : "bi-heart text-dark")"></i>
                                        </button>
                                    </form>
                                </div>
                            }

                        </div>

                        <div class="card-body d-flex flex-column p-3">
                            <div class="mb-2">
                                <span class="badge bg-light text-secondary border">
                                    <i class="bi bi-tag me-1"></i> @(product.Category?.Name ?? "General")
                                </span>
                            </div>

                            <h6 class="card-title fw-bold mb-1 text-truncate">
                                <a asp-action="Show" asp-route-id="@product.Id" class="text-dark text-decoration-none">
                                    @product.Name
                                </a>
                            </h6>

                            <div class="mb-3 text-warning small">
                                @if (product.Rating.HasValue && product.Rating > 0)
                                {
                                    <span><i class="bi bi-star-fill"></i> @(product.Rating?.ToString("0.0") ?? "0.0")</span>
                                }
                                else
                                {
                                    <span class="text-muted"><i class="bi bi-star"></i> -</span>
                                }
                            </div>

                            <div class="mt-auto d-flex justify-content-between align-items-center border-top pt-3">
                                <span class="fw-bold text-brand fs-5">@product.Price RON</span>

                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary px-3 shadow-sm fw-bold" title="Adaugă în coș" @(product.Stock <= 0 ? "disabled" : "")>
                                        <i class="bi bi-cart-plus me-1"></i> Adaugă
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <partial name="_Pagination" />
</div>

<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .wishlist-btn {
        width: 45px; 
        height: 45px;
        transition: transform 0.2s ease;
        font-size: 1.3rem;
    }

    .wishlist-btn:hover {
        transform: scale(1.15);
    }

    .wishlist-btn:hover i.text-danger {
        color: #dc3545 !important;
    }
</style>