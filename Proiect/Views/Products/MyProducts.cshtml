@model IEnumerable<Proiect.Models.Product>
@{
    ViewData["Title"] = "Produsele Mele";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-brand mb-1">
                <i class="bi bi-box-seam-fill me-2"></i>Produsele Mele
            </h2>
            <p class="text-muted mb-0">Gestionează produsele active și stocurile</p>
        </div>
    </div>

    @if (TempData["message"] != null)
    {
        <div class="alert @(TempData["messageType"] ?? "alert-success") alert-dismissible fade show shadow-sm mb-4" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            @TempData["message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="bg-light rounded-circle d-inline-flex p-4 mb-3">
                <i class="bi bi-box2 fs-1 text-muted"></i>
            </div>
            <h4 class="text-muted">Nu ai produse active la vânzare.</h4>
            <p class="text-muted mb-4">Produsele aprobate din propunerile tale vor apărea aici.</p>
            <a asp-controller="ProductProposals" asp-action="New" class="btn btn-primary">Propune un produs nou</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0 hover-effect position-relative">

                        <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                            @if (!product.IsActive)
                            {
                                <span class="badge bg-danger shadow-sm">
                                    <i class="bi bi-eye-slash-fill me-1"></i> Dezactivat
                                </span>
                            }
                            else if (product.Stock <= 0)
                            {
                                <span class="badge bg-warning text-dark shadow-sm">
                                    <i class="bi bi-exclamation-triangle-fill me-1"></i> Stoc Epuizat
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success shadow-sm">
                                    <i class="bi bi-check-circle-fill me-1"></i> Activ
                                </span>
                            }
                        </div>

                        <div class="bg-light rounded-top d-flex align-items-center justify-content-center overflow-hidden" style="height: 200px;">
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@product.ImagePath" class="w-100 h-100 object-fit-cover" alt="@product.Name"
                                     onerror="this.onerror=null;this.src='https://placehold.co/400x300?text=No+Image';">
                            }
                            else
                            {
                                <div class="text-muted text-center">
                                    <i class="bi bi-image fs-1"></i>
                                    <p class="mb-0 small">Fără imagine</p>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <span class="badge bg-light text-secondary border">
                                    <i class="bi bi-tag me-1"></i> @(product.Category?.Name ?? "General")
                                </span>
                            </div>

                            <h5 class="card-title fw-bold text-dark mb-2 text-truncate" title="@product.Name">
                                @product.Name
                            </h5>

                            <p class="card-text text-muted small flex-grow-1 text-truncate-3">
                                @product.Description
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                <div class="d-flex flex-column">
                                    <span class="text-muted small">Preț</span>
                                    <span class="fw-bold text-brand">@product.Price RON</span>
                                </div>
                                <div class="d-flex flex-column text-end">
                                    <span class="text-muted small">Stoc</span>
                                    <span class="fw-bold @(product.Stock > 0 ? "text-dark" : "text-danger")">@product.Stock buc.</span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white border-top-0 p-3">
                            <div class="d-grid gap-2">

                                <a asp-action="Show" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i> Detalii
                                </a>

                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm w-50" title="Editează">
                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                    </a>

                                    <form asp-action="SoftDelete" asp-route-id="@product.Id" method="post" class="w-50">
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100"
                                                onclick="return confirm('Sigur vrei să dezactivezi acest produs? El nu va mai apărea în magazin.');"
                                                title="Șterge">
                                            <i class="bi bi-trash me-1"></i> Șterge
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Înapoi
        </a>
    </div>
</div>

<style>
    .text-truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
    }
</style>