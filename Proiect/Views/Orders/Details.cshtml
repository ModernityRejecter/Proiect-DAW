@model Proiect.Models.Order

@{
    ViewData["Title"] = $"Comanda #{Model.Id}";
    decimal grandTotal = Model.Items.Sum(i => i.Quantity * i.Price);
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-brand mb-0">
            <i class="bi bi-box-seam me-2"></i>Detaliile Comenzii #@Model.Id
        </h2>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="d-flex flex-column gap-3">
                @foreach (var item in Model.Items)
                {
                    <div class="card shadow-sm border-0 position-relative hover-effect">
                        <div class="card-body p-3">
                            <div class="row align-items-center gy-3">

                                <div class="col-3 col-sm-2 col-md-2">
                                    <div class="rounded border d-flex align-items-center justify-content-center overflow-hidden bg-light" style="aspect-ratio: 1/1;">
                                        @if (!string.IsNullOrEmpty(item.Product?.ImagePath))
                                        {
                                            <img src="@item.Product.ImagePath" class="w-100 h-100 object-fit-cover" alt="@item.Product.Name">
                                        }
                                        else
                                        {
                                            <i class="bi bi-image text-muted fs-4"></i>
                                        }
                                    </div>
                                </div>

                                <div class="col-9 col-sm-10 col-md-5">
                                    <h6 class="mb-1 fw-bold">
                                        <a asp-controller="Products" asp-action="Show" asp-route-id="@item.ProductId" class="text-decoration-none text-dark stretched-link">
                                            @item.Product?.Name
                                        </a>
                                    </h6>
                                    <div class="text-muted small">
                                        Preț unitar: <span class="fw-medium">@item.Price.ToString("0.00") RON</span>
                                    </div>
                                </div>

                                <div class="col-6 col-md-2 text-md-center">
                                    <small class="text-muted d-block d-md-none text-uppercase" style="font-size: 0.7rem;">Cantitate</small>
                                    <span class="badge bg-light text-dark border fs-6 px-3">
                                        x @item.Quantity
                                    </span>
                                </div>

                                <div class="col-6 col-md-3 text-end">
                                    <small class="text-muted d-block d-md-none text-uppercase" style="font-size: 0.7rem;">Total</small>
                                    <span class="fw-bold text-brand fs-5">
                                        @((item.Price * item.Quantity).ToString("0.00")) <small class="fs-6 text-muted">RON</small>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 sticky-top" style="top: 100px;">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="card-title mb-0 fw-bold">Sumar Comandă</h5>
                </div>
                <div class="card-body">

                    <div class="mb-4 text-center">
                        @if (Model.Status == "Livrat" || Model.Status == "Completed")
                        {
                            <div class="badge bg-success bg-opacity-10 text-success border border-success px-4 py-2 rounded-pill fs-6">
                                <i class="bi bi-check-circle me-1"></i> @Model.Status
                            </div>
                        }
                        else if (Model.Status == "Anulat" || Model.Status == "Rejected")
                        {
                            <div class="badge bg-danger bg-opacity-10 text-danger border border-danger px-4 py-2 rounded-pill fs-6">
                                <i class="bi bi-x-circle me-1"></i> @Model.Status
                            </div>
                        }
                        else
                        {
                            <div class="badge bg-warning bg-opacity-10 text-warning border border-warning text-dark px-4 py-2 rounded-pill fs-6">
                                <i class="bi bi-hourglass-split me-1"></i> @Model.Status
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted"><i class="bi bi-calendar3 me-2"></i>Data</span>
                        <span class="fw-medium">@Model.Date.ToString("dd/MM/yyyy")</span>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted"><i class="bi bi-clock me-2"></i>Ora</span>
                        <span class="fw-medium">@Model.Date.ToString("HH:mm")</span>
                    </div>

                    <div class="d-flex justify-content-between mb-3">
                        <span class="text-muted"><i class="bi bi-person me-2"></i>Client</span>
                        <span class="fw-medium">@(Model.User?.UserName ?? "Necunoscut")</span>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fs-5 fw-bold text-dark">Total</span>
                        <span class="fs-4 fw-bold text-brand">@grandTotal.ToString("0.00") RON</span>
                    </div>
                    <div class="d-grid gap-2">
                        @if (Model.Status == "Inregistrata")
                        {
                            <form asp-action="CancelOrder" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger w-100 py-2" onclick="return confirm('Ești sigur că vrei să anulezi comanda?');">
                                    <i class="bi bi-x-circle me-2"></i> Anulează Comanda
                                </button>
                            </form>
                        }

                        <a href="javascript:history.back()" class="btn btn-outline-secondary py-2">
                            <i class="bi bi-arrow-left me-2"></i> Înapoi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .object-fit-cover {
        object-fit: cover;
    }

    .hover-effect:hover {
        transform: translateY(-2px);
        transition: transform 0.2s ease;
    }
    /* Face ca tot cardul să fie clickabil datorită link-ului cu clasa stretched-link */
    .stretched-link::after {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        content: "";
    }
    /* Ridicăm poziția relativă a butoanelor/linkurilor care NU vrem să declanșeze stretched-link */
    .position-relative {
        position: relative;
    }
</style>