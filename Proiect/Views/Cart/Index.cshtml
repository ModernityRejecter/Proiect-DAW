@model Proiect.Models.ShoppingCart
@{
    ViewData["Title"] = "Coșul meu";
    decimal totalPrice = ViewBag.TotalPrice != null ? (decimal)ViewBag.TotalPrice : 0;

    var wishlistIds = ViewBag.WishlistProductIds as List<int> ?? new List<int>();
}

<div class="container mt-4 mb-5">
    <h2 class="fw-bold text-brand mb-4">
        <i class="bi bi-cart3 me-2"></i>Coșul de cumpărături
    </h2>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5 bg-white shadow-sm rounded">
            <div class="mb-3">
                <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">Coșul tău este gol</h4>
            <p class="text-muted mb-4">Nu ai adăugat încă niciun produs.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary px-4">
                Mergi la Cumpărături
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                
                <div class="d-none d-md-flex row fw-bold text-muted small text-uppercase px-3 mb-2">
                    <div class="col-md-6">Produs</div>
                    <div class="col-md-3 text-center">Cantitate</div>
                    <div class="col-md-2 text-end">Preț</div>
                    <div class="col-md-1"></div>
                </div>

                <div class="d-flex flex-column gap-3">
                    @foreach (var item in Model.Items)
                    {
                        <div class="card shadow-sm border-0 position-relative">
                            <div class="card-body p-3">
                                <div class="row align-items-center gy-3">
                                    
                                    <div class="col-12 col-md-6">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded border d-flex align-items-center justify-content-center overflow-hidden flex-shrink-0 me-3" style="width: 70px; height: 70px;">
                                                @if (!string.IsNullOrEmpty(item.Product?.ImagePath))
                                                {
                                                    <img src="@item.Product.ImagePath" class="w-100 h-100 object-fit-cover" alt="@item.Product.Name">
                                                }
                                                else
                                                {
                                                    <i class="bi bi-image text-muted fs-4"></i>
                                                }
                                            </div>
                                            <div>
                                                <h6 class="mb-1 fw-bold">
                                                    <a asp-controller="Products" asp-action="Show" asp-route-id="@item.ProductId" class="text-decoration-none text-dark">
                                                        @item.Product?.Name
                                                    </a>
                                                </h6>
                                                @if (!item.Product.IsActive || item.Product.Stock < item.Quantity)
                                                {
                                                    <div class="text-danger small fw-bold">
                                                        <i class="bi bi-exclamation-circle"></i> Indisponibil / Stoc insuficient
                                                    </div>
                                                }
                                                <div class="text-muted small">Preț unitar: @item.Price RON</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6 col-md-3 d-flex justify-content-md-center">
                                        <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                            <input type="hidden" name="itemId" value="@item.Id" />
                                            <input type="hidden" name="quantity" value="@item.Quantity" max="@item.Product?.Stock">

                                            <div class="d-flex align-items-center bg-white border rounded-pill p-1 shadow-sm">
                                                <button class="btn btn-qty rounded-circle" type="button" onclick="changeQty(this, -1)">
                                                    <i class="bi bi-dash"></i>
                                                </button>
                                                
                                                <span class="fw-bold mx-3 user-select-none text-dark" style="min-width: 20px; text-align: center;">
                                                    @item.Quantity
                                                </span>
                                                
                                                <button class="btn btn-qty rounded-circle" type="button" onclick="changeQty(this, 1)">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="col-5 col-md-2 text-end">
                                        <span class="fw-bold text-brand fs-5">
                                            @((item.Price * item.Quantity).ToString("0.00")) <small class="fs-6 text-muted">RON</small>
                                        </span>
                                    </div>

                                    <div class="col-1 col-md-1 text-end d-flex flex-column align-items-end gap-2">

                                        @{
                                            bool isInWishlist = wishlistIds.Contains(item.ProductId);
                                        }

                                        <form asp-controller="Wishlist" asp-action="Toggle" method="post">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-link p-0 shadow-none border-0"
                                                    title="@(isInWishlist ? "Scoate de la favorite" : "Salvează la favorite")">
                                                <i class="bi @(isInWishlist ? "bi-heart-fill text-danger" : "bi-heart text-muted") fs-5"></i>
                                            </button>
                                        </form>

                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="itemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-link text-danger p-0 shadow-none" title="Elimină din coș">
                                                <i class="bi bi-trash fs-5"></i>
                                            </button>
                                        </form>

                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 sticky-top" style="top: 100px; z-index: 1;">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="card-title mb-0 fw-bold">Sumar Comandă</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span class="fw-bold">@totalPrice.ToString("0.00") RON</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="text-muted">Livrare</span>
                            <span class="text-success fw-bold">Gratuit</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5 fw-bold text-dark">Total</span>
                            <span class="fs-4 fw-bold text-brand">@totalPrice.ToString("0.00") RON</span>
                        </div>

                        <div class="d-grid gap-2">
                            <form asp-controller="Orders" asp-action="PlaceOrder" method="post">
                                <button type="submit" class="btn btn-primary py-2 shadow-sm w-100">
                                    <i class="bi bi-credit-card me-2"></i> Finalizează Comanda
                                </button>
                            </form>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary py-2">
                                Continuă Cumpărăturile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function changeQty(btn, change) {
        var input = btn.closest('form').querySelector('input[name="quantity"]');
        var currentVal = parseInt(input.value);
        var maxVal = parseInt(input.getAttribute('max'));

        var newVal = currentVal + change;
        
        // Verificăm limitele (minim 1 și maxim stocul disponibil)
        if (newVal >= 1 && (isNaN(maxVal) || newVal <= maxVal)) {
            input.value = newVal;
            btn.closest('form').submit();
        }
    }
</script>

<style>
    .object-fit-cover {
        object-fit: cover;
    }

    .btn-qty {
        width: 28px;
        height: 28px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e5e7eb;
        color: #4b5563;
        background-color: #f9fafb;
        transition: all 0.2s;
    }

    .btn-qty:hover {
        background-color: #4f46e5;
        color: white;
        border-color: #4f46e5;
    }

    .user-select-none {
        user-select: none;
    }
</style>