@model Proiect.Models.ShoppingCart
@{
    ViewData["Title"] = "Coșul meu";
    decimal totalPrice = ViewBag.TotalPrice != null ? (decimal)ViewBag.TotalPrice : 0;
}

<div class="container mt-4 mb-5">
    <h2 class="fw-bold text-brand mb-4">
        <i class="bi bi-cart3 me-2"></i>Coșul de cumpărături
    </h2>

    @if (TempData["message"] != null)
    {
        <div class="alert @(TempData["messageType"] ?? "alert-success") alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i> @TempData["message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5 bg-white shadow-sm rounded">
            <div class="mb-3">
                <i class="bi bi-cart-x text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">Coșul tău este gol</h4>
            <p class="text-muted mb-4">Nu ai adăugat încă niciun produs.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary px-4">
                Mergi la Cumpărături
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">

                <div class="d-none d-md-flex row fw-bold text-muted small text-uppercase px-3 mb-2">
                    <div class="col-md-6">Produs</div>
                    <div class="col-md-3 text-center">Cantitate</div>
                    <div class="col-md-2 text-end">Preț</div>
                    <div class="col-md-1"></div>
                </div>

                <div class="d-flex flex-column gap-3">
                    @foreach (var item in Model.Items)
                    {
                        <div class="card shadow-sm border-0 position-relative">
                            <div class="card-body p-3">
                                <div class="row align-items-center gy-3">

                                    <div class="col-12 col-md-6">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded border d-flex align-items-center justify-content-center overflow-hidden flex-shrink-0 me-3" style="width: 70px; height: 70px;">
                                                @if (!string.IsNullOrEmpty(item.Product?.ImagePath))
                                                {
                                                    <img src="@item.Product.ImagePath" class="w-100 h-100 object-fit-cover" alt="@item.Product.Name">
                                                }
                                                else
                                                {
                                                    <i class="bi bi-image text-muted fs-4"></i>
                                                }
                                            </div>
                                            <div>
                                                <h6 class="mb-1 fw-bold">
                                                    <a asp-controller="Products" asp-action="Show" asp-route-id="@item.ProductId" class="text-decoration-none text-dark">
                                                        @item.Product?.Name
                                                    </a>
                                                </h6>
                                                <div class="text-muted small">Preț unitar: @item.Price RON</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6 col-md-3 d-flex justify-content-md-center">
                                        <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center" style="max-width: 120px;">
                                            <input type="hidden" name="itemId" value="@item.Id" />
                                            <div class="input-group input-group-sm">
                                                <button class="btn btn-outline-secondary" type="button" onclick="changeQty(this, -1)">-</button>
                                                <input type="number" name="quantity" class="form-control text-center bg-white" value="@item.Quantity" min="1" max="@item.Product?.Stock" readonly onchange="this.form.submit()">
                                                <button class="btn btn-outline-secondary" type="button" onclick="changeQty(this, 1)">+</button>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="col-5 col-md-2 text-end">
                                        <span class="fw-bold text-brand fs-5">
                                            @((item.Price * item.Quantity).ToString("0.00")) <small class="fs-6 text-muted">RON</small>
                                        </span>
                                    </div>

                                    <div class="col-1 col-md-1 text-end">
                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="itemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-link text-danger p-0 shadow-none" title="Șterge">
                                                <i class="bi bi-trash fs-5"></i>
                                            </button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 sticky-top" style="top: 100px; z-index: 1;">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="card-title mb-0 fw-bold">Sumar Comandă</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span class="fw-bold">@totalPrice.ToString("0.00") RON</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="text-muted">Livrare</span>
                            <span class="text-success fw-bold">Gratuit</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="fs-5 fw-bold text-dark">Total</span>
                            <span class="fs-4 fw-bold text-brand">@totalPrice.ToString("0.00") RON</span>
                        </div>

                        <div class="d-grid gap-2">
                            <form asp-controller="Orders" asp-action="PlaceOrder" method="post">
                                <button type="submit" class="btn btn-primary py-2 shadow-sm w-100">
                                    <i class="bi bi-credit-card me-2"></i> Finalizează Comanda
                                </button>
                            </form>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary py-2">
                                Continuă Cumpărăturile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function changeQty(btn, change) {
        var input = btn.parentElement.querySelector('input[name="quantity"]');
        var currentVal = parseInt(input.value);
        var maxVal = parseInt(input.getAttribute('max'));

        var newVal = currentVal + change;
        if (newVal >= 1 && newVal <= maxVal) {
            input.value = newVal;
            btn.closest('form').submit();
        }
    }
</script>

<style>
    .object-fit-cover {
        object-fit: cover;
    }
</style>