@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmare email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="bi bi-patch-check-fill text-success fs-1" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="fw-bold text-brand mb-4">Email confirmat!</h2>

                    <div class="mb-4">
                        <partial name="_StatusMessage" model="Model.StatusMessage" />
                    </div>

                    <p class="text-muted mb-4">
                        Îți mulțumim pentru confirmarea adresei de email. Contul tău este acum activ.
                    </p>

                    <a asp-page="./Login" class="btn btn-primary px-5 py-2 fw-bold">
                        Mergi la autentificare
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>