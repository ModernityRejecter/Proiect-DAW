@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirmare trimisă";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="bg-brand-soft rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-envelope-check-fill text-brand fs-1"></i>
                        </div>
                        <h2 class="fw-bold text-brand">Verifică-ți emailul</h2>
                    </div>

                    <p class="text-muted mb-4">
                        Te rugăm să verifici adresa de email. Ți-am trimis instrucțiunile necesare pentru resetarea parolei.
                    </p>

                    <div class="border-top pt-4">
                        <a asp-page="./Login" class="btn btn-primary px-4 fw-bold">
                            Înapoi la autentificare
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>