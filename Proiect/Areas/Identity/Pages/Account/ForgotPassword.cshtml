@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Ai uitat parola?";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5 text-center">

                    <div class="mb-4">
                        <div class="bg-brand-soft rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="bi bi-envelope-exclamation text-brand fs-1"></i>
                        </div>
                        <h2 class="fw-bold text-brand">Recuperare parolă</h2>
                        <p class="text-muted small px-3">
                            Introdu adresa de email asociată contului și îți vom trimite instrucțiuni pentru resetarea parolei.
                        </p>
                    </div>

                    <form method="post" class="text-start">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                            Trimite link de resetare
                        </button>
                    </form>

                    <div class="mt-4 pt-3 border-top">
                        <a asp-page="./Login" class="text-decoration-none fw-bold text-brand small">
                            <i class="bi bi-arrow-left me-1"></i> Înapoi la autentificare
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}