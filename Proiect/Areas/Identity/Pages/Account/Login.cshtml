@page
@model LoginModel

@{
    ViewData["Title"] = "Autentificare";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-box-arrow-in-right fs-1 text-brand"></i>
                        <h2 class="fw-bold text-brand">Bine ai venit!</h2>
                        <p class="text-muted">Introdu datele pentru autentificare</p>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Parolă" />
                            <label asp-for="Input.Password">Parolă</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                Ține-mă minte
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                            Intră în cont
                        </button>

                        <div class="mt-3 text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted small text-decoration-none">Ai uitat parola?</a>
                        </div>
                    </form>

                    <div class="mt-4 text-center border-top pt-3">
                        <span class="text-muted">Nu ai cont?</span>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold text-brand">Înregistrează-te</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}