@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Schimbă parola";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="fw-bold text-brand mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Parola veche" />
                        <label asp-for="Input.OldPassword" class="form-label">Parola actuală</label>
                        <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Parola nouă" />
                        <label asp-for="Input.NewPassword" class="form-label">Parola nouă</label>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmă parola" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirmă parola nouă</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary px-4 fw-bold">
                        <i class="bi bi-check-lg me-2"></i> Actualizează parola
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}